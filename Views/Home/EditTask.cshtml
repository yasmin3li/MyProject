@model MvcTodoApp.Models.TaskItem

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>تعديل المهمة</title>
</head>
<body>
    <h1>تعديل المهمة</h1>
    <form method="post" asp-action="EditTask">
        <input type="hidden" name="id" value="@Model.Id" />
        <input type="text" name="newTitle" value="@Model.Title" required />
        <button type="submit">حفظ التعديلات</button>
        <a href="@Url.Action("Index")">إلغاء</a>
    </form>
</body>
</html>